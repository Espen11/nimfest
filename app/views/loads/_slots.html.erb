<table class="table table-bordered">
	<tr>
		<th>Skydiver</th>
		<th>Height</th>
		<th>Type</th>
		<th>Price</th>
	</tr>
<% @slots.each do |slots| -%>
	<%= form_for(slots, remote: true) do |f| %>
	  <% if slots.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(slots.errors.count, "error") %> prohibited this slot from being saved:</h2>
	
	      <ul>
	      <% @slot.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
		<tr>
      <td class="field">
		    <%= f.text_field :jumper, value: slots.jumper.name %>
		  </td>
      <td class="field">
	    	<%= f.collection_select :height, Price.order(:height),:id,:height %>
		  </td>
		  <td class="field">
	      <%= f.select :jumptype , Slot.jumptypes %>
		  </td>
		  <td class="field">
		    <%= f.text_field :price %>
		  </td>
		  <td class="actions">
		    <%= f.submit 'Update'%>
		  </td>
		</tr>
	<% end %>
<% end %>

</table>
