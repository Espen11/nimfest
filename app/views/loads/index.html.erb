<div>
  <% @loads.each do |load| %>
    <h2><%= link_to "Load " + load.loadfortheday.to_s , edit_load_path(load) %> <%= load.departure_timestamp.strftime("%H:%M - %d/%m-%y") if load.departure_timestamp? %></h2>
    <p><b>Pilot: <%= load.pilot %> / Aircraft: <%= load.aircraft.name %> / Dropzone: <%= load.location %></b></p>
    <table class="table table-bordered">
      <thead>
        <tr class="error">
          <th>Jumper</th>
          <th>License</th>
          <th>Altitude</th>
          <th>Jumptype</th>
          <th>Price</th>
        </tr>
      </thead>
      <% load.slots.each do |slot| -%>
        <tr <%= 'class=success' if slot.jumpmaster? -%>>
          <td><%= link_to slot.jumper.name, jumper_path(slot.jumper) %></td>
          <td><%= slot.jumper.license %></td>
          <td><%= slot.height %></td>
          <td><%= slot.jumptype %></td>
          <td><%= slot.price %></td>
        </tr>
      <% end -%>
    </table>
  <% end %>
</div>

<br>

<%= link_to 'New Load', new_load_path %>
