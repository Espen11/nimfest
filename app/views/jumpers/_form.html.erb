<%= form_for(@jumper) do |f| %>
  <% if @jumper.errors.any? %>
    <td id="error_explanation">
      <h2><%= pluralize(@jumper.errors.count, "error") %> prohibited this jumper from being saved:</h2>

      <ul>
      <% @jumper.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </td>
  <% end %>
  <table class="table">
    <tr>
    <td class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </td>
    <td class="field">
      <%= f.label :license %><br>
      <%= f.select :license, Jumper.licenses %>
    </td>
  </tr>
  <tr>
    <td class="field">
      <%= f.label :licensenumber %><br>
      <%= f.text_field :licensenumber %>
    </td>
    <td class="field">
      <%= f.label :phone %><br>
      <%= f.number_field :phone %>
    </td>
  </tr>
  <tr>
    <td class="field">
      <%= f.label :clubs %><br>
      <%= f.collection_check_boxes :club_ids, Club.all,:id,:name %>
    </td>
    <td class="field">
      <%= f.label :ratings %><br>
      <%= f.collection_check_boxes :rating_ids, Rating.all,:id,:name %>
    </td>
  </tr>
  <tr>
    <td class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </td>
    <td class="field">
      <%= f.label :verified %><br>
      <%= check_box(:jumper, :verified) %>
    </td>
  </tr>
  <tr>
    <th>
			Next of kin
    </th>
  </tr>
  <tr>
    <td class="field">
      <p>Name</p>
      <%= f.text_field :nextofkin_name %>
    </td>
    <td class="field">
      <p>Relation</p>
      <%= f.select :nextofkin_relation, Jumper.kin_relation %>
    </td>
  </tr>
  <tr>
    <td class="field">
      <p>Phone number</p>
      <%= f.text_field :nextofkin_phone %>
    </td>
    <td class="field">
      <p>Address</p>
      <%= f.text_field :nextofkin_address %>
    </td>
  </tr>
  <tr>
    <td class="actions">
      <%= f.submit %>
    </td>
    </tr>
  </table>
<% end %>
